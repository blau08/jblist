{{#if showCategoryForm}}
<div class="container">
  <form>
    <label for="category">Category</label>
    {{input value=name id='name' placeholder="Name"}}
    <button class="btn btn-default"{{action 'submit' category}}>Submit</button>
  </form>
</div>
{{else}}
  <button {{action 'addCategory'}}>Add Category</button>
{{/if}}
